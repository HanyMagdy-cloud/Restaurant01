@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>

    <!-- Bootstrap + site styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.styles.css" asp-append-version="true" />

    <!-- Font Awesome (brands) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          referrerpolicy="no-referrer" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Restaurant</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Menu" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservations" asp-action="Create">Book a Table</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page content -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year - Restaurant</span>

            <div class="footer_social mt-3 mt-md-0">
                <a href="https://facebook.com" target="_blank" class="text-light me-3" aria-label="Facebook">
                    <i class="fa-brands fa-facebook fa-lg"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="text-light me-3" aria-label="X (Twitter)">
                    <i class="fa-brands fa-x-twitter fa-lg"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="text-light me-3" aria-label="LinkedIn">
                    <i class="fa-brands fa-linkedin fa-lg"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="text-light me-3" aria-label="Instagram">
                    <i class="fa-brands fa-instagram fa-lg"></i>
                </a>
                <a href="https://pinterest.com" target="_blank" class="text-light" aria-label="Pinterest">
                    <i class="fa-brands fa-pinterest fa-lg"></i>
                </a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
